                        <div id="chart_13" style="min-height: 328.7px;">
                        </div>
                    </div>
                </div>
                <!--end::Card-->
            </div>
        </div>        
    </div>
</div>
<!--end::Card-->

<div class="modal fade" id="detailModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalSizeLg" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">
                <div style="width: 100%" class="datatable datatable-bordered datatable-head-custom" id="detailDatatable"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/assets/js/admin_home.js"></script>
}
