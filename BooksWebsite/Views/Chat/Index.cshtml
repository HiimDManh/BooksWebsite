    <script>
        ListChat()
        //danh sach đã nhắn tin
        function ListChat() {
            $.ajax({
                url: '/Chat/ListChat',
                type: 'get',
                success: function (data) {
                    if (data.code === 200) {
                        $('#listGroupChat').empty();
                        var div = ``;
                        $.each(data.data, function (k, v) {
                            div += `<div class="d-flex align-items-center justify-content-between mb-5" data-id="${v.username}" name="groupChat">
                                    <div class="d-flex align-items-center">
                                        <div class="symbol symbol-circle symbol-50 mr-3">
                                            <img alt="Pic" src="/assets/media/users/300_12.jpg" />
                                        </div>
                                        <div class="d-flex flex-column">
                                            <a class="text-dark-75 text-hover-primary font-weight-bold font-size-lg">${v.username}</a>
                                            <span class="text-muted font-weight-bold font-size-sm">${v.Message}</span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-column align-items-end">
                                        <span class="text-muted font-weight-bold font-size-sm">${Math.floor(v.CreateDate)} min</span>
                                        <span class="label label-sm label-success">${v.UnreadCount}</span>
                                    </div>
                                </div>`
                        });
                        $('#listGroupChat').append(div)
                    } else {

                    }
                },
                error: function () {

                }
            })
        }

        //tim kiếm người liên hệ
        $(document).on('keyup', '#accountSearch', function () {
            var acc = $('#accountSearch').val();
            if (acc == "") {
                ListChat()
            } else {
                SearchAccount(acc)
            }

        })
        //chọn người liên hệ để nhắn tin và đăng kí tên sử dụng socket
        $(document).on('click', 'div[name="groupChat"]', function () {
            var id = $(this).attr("data-id")
            recipientUsername = id;
            ShowInfoChat(id)
            ChangeStatusRead(id)
        })
        $(document).on('click', '#khungChat', function () {
            ChangeStatusRead(recipientUsername)
        })
        $(document).on('keydown', '#msg', function (e) {
            if (event.key === 'Enter') {
                e.preventDefault();
                var msg = $('#msg').val()
                sendPrivateMessage(msg)
            }
        })
        //hàm gọi danh sách tìm kiếm
        function SearchAccount(id) {
            $.ajax({
                url: '/User/Account',
                type: 'get',
                data: { id },
                success: function (data) {
                    if (data.code === 200) {
                        $('#listGroupChat').empty();
                        var div = ``;
                        $.each(data.user, function (k, v) {
                            div += `<div class="d-flex align-items-center justify-content-between mb-5" data-id="${v.username}" name="groupChat">
                                          <div class="d-flex align-items-center">
                                              <div class="symbol symbol-circle symbol-50 mr-3">
                                                  <img alt="Pic" src="/assets/media/users/300_12.jpg" />
                                              </div>
                                              <div class="d-flex flex-column">
                                                  <a class="text-dark-75 text-hover-primary font-weight-bold font-size-lg">${v.username}</a>
                                                  <span class="text-muted font-weight-bold font-size-sm">${v.Message}</span>
                                              </div>
                                          </div>
                                          <div class="d-flex flex-column align-items-end">
                                              <span class="text-muted font-weight-bold font-size-sm">${Math.floor(v.CreateDate)} min</span>
                                          </div>
                                      </div>`
                        });
                        $('#listGroupChat').append(div)
                    } else {

                    }
                },
                error: function () {

                }
            })
        }
        //hiểm thị thông tin msg với người liên hệ
        function ShowInfoChat(id) {
            $('#nameGroupChat').text(id)
            $('#khungChat').show()
            $.ajax({
                url: '/Chat/InfoChat',
                type: 'get',
                data: { otherUser: id },
                success: function (data) {
                    if (data.code === 200) {
                        $('.messages').empty();
                        var div = ``;
                        $.each(data.data, function (k, v) {
                            div += `<div class="d-flex flex-column mb-5 align-items-${(v.IsMyMessage ? `end` : `start`)}">
                                         <div class="d-flex align-items-center">
                                             <div class="symbol symbol-circle symbol-40 mr-3">
                                                 <img alt="Pic" src="assets/media/users/300_12.jpg" />
                                             </div>
                                             <div>
                                                 <a class="text-dark-75 text-hover-primary font-weight-bold font-size-h6">${(v.IsMyMessage ? v.Sender : v.Recipient)} </a>
                                                 <span class="text-muted font-size-sm">${Math.floor(v.CreateDate)} min</span>
                                             </div>
                                         </div>
                                         <div class="mt-2 rounded p-5 bg-light-${(v.IsMyMessage ? `success` : `primary`)} text-dark-50 font-weight-bold font-size-lg text-left max-w-400px">${v.Message}</div>
                                     </div>`
                        });
                        $('.messages').append(div)
                        scrollToBottom()
                    } else {

                    }
                },
                error: function () {

                }
            })
        }
        //hàm thay đổi trạng thái đã đọc đối với người liên hệ
        function ChangeStatusRead(id) {
            $.ajax({
                url: '/Chat/ChangeStatusRead',
                type: 'post',
                data: { id },
                success: function (data) {

                },
                error: function () {

                }
            })
        }
    </script>

    <script>
        var recipientUsername = "";
        var username = "";
        let socket = null;
        connectWebSocket()
        function connectWebSocket() {
            socket = new WebSocket("ws://localhost:8181");

            // Xử lý sự kiện khi WebSocket mở
            socket.onopen = () => {
                username = $('#accountCurrent').text(); // Lấy username từ DOM
                if (username === "") {
                    console.warn("Username is empty. Closing WebSocket connection and retrying...");
                    socket.close(); // Ngắt kết nối
                    return; // Thoát để thử kết nối lại thông qua onclose
                }
                console.log("Kết nối WebSocket thành công! " + username);
                socket.send(`REGISTER|${username}`); // Gửi lệnh đăng ký
            };

            // Xử lý sự kiện đóng kết nối
            socket.onclose = (event) => {
                console.warn("WebSocket đã bị đóng: ", event.reason);
                setTimeout(() => {
                    connectWebSocket(); // Thử kết nối lại
                }, 500); // Thử lại sau 3 giây
            };
            // Xử lý sự kiện nhận tin nhắn
            socket.onmessage = (event) => {
                const message = event.data; // Lấy dữ liệu từ tin nhắn
                console.log("Tin nhắn nhận được: ", message);

                // Thực hiện logic xử lý tin nhắn
                handleMessage(message);
            };
            // Xử lý lỗi WebSocket
            socket.onerror = (error) => {
                console.error("Lỗi WebSocket: ", error);
            };
        }
