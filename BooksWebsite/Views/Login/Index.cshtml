<!--end::Head-->
<!--begin::Body-->
<body id="kt_body" class="header-fixed header-mobile-fixed subheader-enabled subheader-fixed aside-enabled aside-fixed aside-minimize-hoverable page-loading">
    <div class="form-container">

        <!--begin:Content-->
        <div id="col2">
            <div class="login-form">
                <!--begin:Sign In Form-->
                <div class="text-center mb-10">
                    <h2 class="form-title">Đăng nhập</h2>
                </div>
                <form class="form-inputs form" id="kt_login_signin_form">
                    <div class="input-box form-group">
                        <input class="input-field" type="text" placeholder="Tên đăng nhập" id="username" name="user" autocomplete="off" required />
                        <i class="flaticon2-user icon"></i>
                    </div>
                    <div class="input-box form-group">
                        <input class="input-field" type="password" id="password" placeholder="Mật khẩu" name="pass" autocomplete="off" required />
                        <i class="fas fa-lock icon"></i>
                    </div>
                    <div style="display: flex; justify-content: center;">
                        <label class="noAccount">Bạn chưa có tài khoản? <span class="registerBtn">Đăng ký</span></label>
                    </div>
                    <div class="text-center mt-15 form-group">
                        <button id="kt_login_signin_submit" type="submit" class="btn btn-primary btn-pill shadow-sm py-4 px-9 font-weight-bold">Đăng nhập</button>
                    </div>
                </form>
                <!--end:Forgot Password Form-->
            </div>

            <div class="login-form">
                <!--begin:Sign In Form-->
                <div class="text-center mb-10">
                    <h2 class="form-title">Đăng ký</h2>
                </div>
                <form class="form-inputs form" id="register_form">
                    <div class="input-box form-group">
                        <input class="input-field" type="text" placeholder="Tên đăng nhập" id="re_username" name="re_user" autocomplete="off" required />
                        <i class="flaticon2-user icon"></i>
                    </div>
                    <div class="input-box form-group">
                        <input class="input-field" type="password" id="re_password" placeholder="Mật khẩu" name="re_pass" autocomplete="off" required />
                        <i class="fas fa-lock icon"></i>
                    </div>
                    <div class="input-box form-group">
                        <input class="input-field" type="password" id="re_confirm_password" placeholder="Xác nhận mật khẩu" name="re_confirm_pass" autocomplete="off" required />
                        <i class="fas fa-lock icon"></i>
                    </div>
                    <div style="display: flex; justify-content: center;">
                        <label class="noAccount">Bạn đã có tài khoản? <span class="loginBtn">Đăng nhập</span></label>
                    </div>
                    <div class="text-center mt-15 form-group">
                        <button id="register_submit" type="submit" class="btn btn-primary btn-pill shadow-sm py-4 px-9 font-weight-bold">Đăng ký</button>
                    </div>
                </form>
                <!--end:Forgot Password Form-->
            </div>
        </div>
        <!--end:Content-->
    </div>
    <!--end::Main-->
    <script>var HOST_URL = "https://preview.keenthemes.com/metronic/theme/html/tools/preview";</script>
    <!--begin::Global Config(global config for global JS scripts)-->
